<Window x:Class="TheoryEditor.visualelements.MessageListBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MessageListBox" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="26"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Name="Listbox" Margin="5" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" SelectionChanged="Listbox_SelectionChanged"/>
        <Button Name="Ok" Grid.Row="1" Grid.Column="0" Content="Ok" Margin="2" Click="Ok_Click" />
        <Button Name="Cancel" Grid.Row="1" Grid.Column="1" Content="Cancel" Margin="2" Click="Cancel_Click" />
    </Grid>
</Window>
